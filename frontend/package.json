{
  "name": "recallai",
  "private": true,
  "version": "1.0.1",
  "description": "RecallAI - AI Interview Assistant",
  "author": "RecallAI Team",
  "main": "electron.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "generate-icons": "./generate-icons.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.7",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "vite": "^7.2.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.recallai.app",
    "productName": "RecallAI",
    "icon": "public/icon.png",
    "directories": {
      "output": "release"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "676662805-cmd",
        "repo": "RecallAI"
      }
    ],
    "files": [
      "dist/**/*",
      "electron.js",
      "preload.js",
      "popup.html",
      "package.json",
      "public/icon*.png",
      "public/icon.ico"
    ],
    "extraResources": [
      {
        "from": "../backend/data",
        "to": "backend/data"
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icons/icon.icns",
      "extraResources": [
        {
          "from": "../backend/dist/main",
          "to": "backend/main"
        },
        {
          "from": "../backend/.env",
          "to": "backend/.env"
        }
      ]
    }
  }
}
