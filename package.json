{
  "name": "recallai",
  "version": "1.0.0",
  "description": "AI-powered conversation recall and knowledge management system",
  "main": "electron/main.js",
  "scripts": {
    "install:all": "npm run install:frontend && npm run install:electron",
    "install:frontend": "cd frontend && npm install",
    "install:electron": "cd electron && npm install",
    
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && python main.py",
    "dev:electron": "cd electron && npm run dev",
    
    "build": "npm run build:frontend && npm run build:electron",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "cd electron && npm run build",
    
    "dist": "npm run build && npm run dist:electron",
    "dist:electron": "cd electron && npm run dist",
    
    "pack:win": "npm run build && cd electron && npm run build:win",
    "pack:mac": "npm run build && cd electron && npm run build:mac",
    "pack:linux": "npm run build && cd electron && npm run build:linux",
    
    "start": "cd electron && npm start",
    "clean": "rm -rf frontend/dist electron/dist node_modules frontend/node_modules electron/node_modules",
    
    "setup": "npm run install:all",
    "postinstall": "npm run setup"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.recallai.app",
    "productName": "RecallAI",
    "directories": {
      "output": "dist",
      "buildResources": "frontend"
    },
    "files": [
      "frontend/**/*",
      "!frontend/node_modules",
      "!frontend/src",
      "backend/**/*",
      "!backend/__pycache__",
      "!backend/**/*.pyc",
      "!backend/**/*.py",
      "!backend/venv",
      "!backend/.venv"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": ["**/*", "!__pycache__", "!**/*.pyc", "!**/*.py", "!venv", "!.venv"]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "category": "public.app-category.productivity",
      "icon": "frontend/assets/icon.icns"
    },
    "dmg": {
      "title": "RecallAI",
      "icon": "frontend/assets/icon.icns",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "win": {
      "target": ["nsis"],
      "icon": "frontend/assets/icon.ico"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/676662805-cmd/RecallAI.git"
  },
  "keywords": [
    "ai",
    "conversation",
    "recall",
    "knowledge",
    "electron",
    "desktop"
  ],
  "author": "Your Name",
  "license": "MIT"
}